<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scienceSubtopicSelection" android:background="@color/colorAccent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/space_image" android:id="@+id/ivSpace"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            tools:ignore="VectorDrawableCompat" android:clickable="true" android:layout_centerInParent="true"
            android:focusable="true"
            android:onClick="onClick"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvChoiceSelection"
            android:layout_alignParentStart="false"
            android:layout_centerInParent="true" android:layout_alignParentTop="true"
            android:text="What would you like to learn about in science?" android:textSize="18sp"
            android:textStyle="bold"/>

</RelativeLayout>